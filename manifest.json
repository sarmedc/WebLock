{
  "manifest_version": 2,

  "name": "WebLock",
  "description": "This extension blocks websites that waste your time so you can focus on studies or more important things",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "weblock.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false    
  },

  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "https://ajax.googleapis.com/"
  ]
}
